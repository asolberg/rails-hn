<div class="col-md-12 centered">

<table class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <th>Vote!</th>
                    <th>Links</th>
                  </tr>
                </thead>
                <tbody>
                    <% @links.each do |link| %>
                  <tr id="<%= link.id %>">
                    <td style="text-align:center">
                    <div>
                      <form action="<%= link.user_votes_total==1 ? "/links/" + link.id.to_s + "/votes/0" : "/links/" + link.id.to_s + "/votes/2" %>" method="post">
                      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
                    <button type="submit" id="<%= link.id %>" class="btn btn-default vote-up glyphicon glyphicon-chevron-up <%= link.user_votes_total==1 ? "vote-up-on" : "" %>">
                    </button>
                    </form>
                  </div>
                  <div>
                        <form action="<%= link.user_votes_total==-1 ? "/links/" + link.id.to_s + "/votes/0" : "/links/" + link.id.to_s + "/votes/1" %>" method="post">
                          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
                          <button type="submit" id="<%= link.id %>" class="btn btn-default vote-down glyphicon glyphicon-chevron-down <%= link.user_votes_total==-1 ? "vote-down-on" : "" %>">
                          </button>
                        </form>
                  </div>
                </td>
                    <td style="vertical-align:middle;">
                  <span class="badge"><%= link.votes_total %></span>
                  <p><%= link_to link.title, link %>- <%= link.description %></p></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>

                  <%= will_paginate %>


</div>